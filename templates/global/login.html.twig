{# Import du navbar #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Login{% endblock %}

{# Titre de la section #}
{% block monTitre %}Login{% endblock %}

{% block body %}
{# Afficher un message d'erreur lors de la tentative de connexion #}
{% if error %}
    <div class="alert alert-danger">
        Le login et le mot de passe ne correspondent pas.
    </div>
{% endif %}
<!-- Formulaire de connexion -->
<h1>Connectez-vous maintenant</h1><br/>
<form action="{{ path('login') }}" method="post">
    <div class="form-group>"
        <label>Votre identifiant : </label>
        <input type="text" required name ="_username" class="form-control" value="{{ lastUserName }}">
    </div>
    <div class="form-group">
        <label>Votre mot de passe : </label>
        <input type="password" required name ="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="S'identifier">
</form>

{% endblock %}
